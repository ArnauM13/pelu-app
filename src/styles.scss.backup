}

.p-toast .p-toast-icon-close {
  color: var(--text-color-light) !important;
  background: transparent !important;
  border: none !important;
  border-radius: 50% !important;
  width: 24px !important;
  height: 24px !important;
  display: flex !important;
  align-items: center !important;
  justify-content: center !important;
  cursor: pointer !important;
  transition: all 0.2s ease !important;
  flex-shrink: 0 !important;
  margin-left: 0.5rem !important;
  font-size: 0.875rem !important;
  opacity: 0.6 !important;
}

.p-toast .p-toast-icon-close:hover {
  background: var(--surface-color-hover) !important;
  color: var(--text-color) !important;
  opacity: 1 !important;
  transform: scale(1.05) !important;
}

.p-toast .p-toast-icon-close:active {
  transform: scale(0.95) !important;
}

/* Toast animations */
@keyframes toastSlideIn {
  from {
    opacity: 0;
    transform: translateX(100%) scale(0.95);
  }
  to {
    opacity: 1;
    transform: translateX(0) scale(1);
  }
}

@keyframes toastSlideOut {
  from {
    opacity: 1;
    transform: translateX(0) scale(1);
  }
  to {
    opacity: 0;
    transform: translateX(100%) scale(0.95);
  }
}

/* Toast position styles */
.p-toast.p-toast-top-right {
  top: 1rem !important;
  right: 1rem !important;
}

.p-toast.p-toast-top-left {
  top: 1rem !important;
  left: 1rem !important;
}

.p-toast.p-toast-top-center {
  top: 1rem !important;
  left: 50% !important;
  transform: translateX(-50%) !important;
}

.p-toast.p-toast-bottom-right {
  bottom: 1rem !important;
  right: 1rem !important;
}

.p-toast.p-toast-bottom-left {
  bottom: 1rem !important;
  left: 1rem !important;
}

.p-toast.p-toast-bottom-center {
  bottom: 1rem !important;
  left: 50% !important;
  transform: translateX(-50%) !important;
}

/* Responsive toast styles */
@media (max-width: 768px) {
  .p-toast {
    width: calc(100% - 2rem) !important;
    max-width: 400px !important;
  }

  .p-toast .p-toast-message-content {
    padding: 0.875rem 1rem !important;
  }

  .p-toast .p-toast-message-text {
    font-size: 0.875rem !important;
  }

  .p-toast .p-toast-summary {
    font-size: 0.9rem !important;
  }

  .p-toast .p-toast-detail {
    font-size: 0.85rem !important;
  }
}

/* Dark mode support for toasts */
@media (prefers-color-scheme: dark) {
  .p-toast .p-toast-message {
    background: var(--surface-color) !important;
    border-color: var(--border-color) !important;
    color: var(--text-color) !important;
  }

  .p-toast .p-toast-message-text {
    color: var(--text-color) !important;
  }

  .p-toast .p-toast-summary {
    color: var(--text-color) !important;
  }

  .p-toast .p-toast-detail {
    color: var(--text-color) !important;
  }

    .p-toast .p-toast-icon-close {
    color: var(--text-color-light) !important;
    background: transparent !important;
    border: none !important;
    opacity: 0.6 !important;
  }

  .p-toast .p-toast-icon-close:hover {
    background: var(--surface-color-hover) !important;
    color: var(--text-color) !important;
    opacity: 1 !important;
  }
}
