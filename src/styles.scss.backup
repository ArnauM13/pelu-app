/* PrimeNG Overrides to fix transparency issues */
.p-dropdown {
  background-color: white !important;
  border: 1px solid var(--border-color) !important;
  border-radius: 8px !important;
  padding: 0.75rem !important;
  min-height: 48px !important;
  display: flex !important;
  align-items: center !important;
  cursor: pointer !important;
  transition: all 0.2s ease !important;
}

.p-dropdown:hover {
  border-color: var(--primary-color) !important;
  box-shadow: 0 0 0 3px rgba(48, 109, 205, 0.1) !important;
}

.p-dropdown:focus-within {
  border-color: var(--primary-color) !important;
  box-shadow: 0 0 0 3px rgba(48, 109, 205, 0.15) !important;
  outline: none !important;
}

.p-dropdown .p-dropdown-trigger {
  background-color: white !important;
  border: none !important;
  padding: 0 !important;
  margin: 0 !important;
}

.p-dropdown .p-dropdown-label {
  background-color: white !important;
  color: var(--text-color) !important;
  font-size: 1rem !important;
  line-height: 1.5 !important;
}

.p-dropdown .p-dropdown-label.p-placeholder {
  color: var(--text-color-light) !important;
}

/* Dropdown panel styles */
.p-dropdown-panel {
  background-color: white !important;
  border: 1px solid var(--border-color) !important;
  border-radius: 8px !important;
  box-shadow: 0 4px 20px rgba(0, 0, 0, 0.15) !important;
  backdrop-filter: none !important;
  margin-top: 4px !important;
  overflow: hidden !important;
  z-index: 1000 !important;
}

.p-dropdown-items-wrapper {
  background-color: white !important;
  padding: 0.5rem 0 !important;
}

.p-dropdown-item {
  background-color: white !important;
  color: var(--text-color) !important;
  padding: 0.75rem 1rem !important;
  border: none !important;
  cursor: pointer !important;
  transition: background-color 0.2s ease !important;
}

.p-dropdown-item:hover {
  background-color: var(--surface-color-hover) !important;
}

.p-dropdown-item.p-highlight {
  background-color: var(--primary-color-lighter) !important;
  color: var(--text-color) !important;
}

/* Filter input styles */
.p-dropdown-filter {
  width: 100% !important;
  padding: 0.75rem 0.75rem 0.75rem 2.5rem !important;
  border: 1px solid var(--border-color) !important;
  border-radius: 8px !important;
  font-size: 1rem !important;
  background-color: white !important;
  color: var(--text-color) !important;
  font-family: inherit !important;
  box-sizing: border-box !important;
  transition: all 0.2s ease !important;
  position: relative !important;
}

.p-dropdown-filter:focus {
  outline: none !important;
  border-color: var(--primary-color) !important;
  box-shadow: 0 0 0 3px rgba(48, 109, 205, 0.15) !important;
}

.p-dropdown-filter:hover {
  border-color: var(--primary-color) !important;
}

.p-dropdown-filter::placeholder {
  color: var(--text-color-light) !important;
  opacity: 1 !important;
  font-style: normal !important;
  font-weight: normal !important;
}

/* Search icon styles - positioned on the left */
.p-dropdown-filter-icon {
  position: absolute !important;
  left: 0.75rem !important;
  top: 50% !important;
  transform: translateY(-50%) !important;
  color: var(--text-color-light) !important;
  font-size: 1rem !important;
  pointer-events: none !important;
  z-index: 1 !important;
}

/* Clear button styles */
.p-dropdown-clear-icon {
  color: var(--text-color-light) !important;
  cursor: pointer !important;
  transition: all 0.2s ease !important;
  padding: 0.25rem !important;
  border-radius: 4px !important;
  background-color: transparent !important;
  border: none !important;
  display: flex !important;
  align-items: center !important;
  justify-content: center !important;
  min-width: 24px !important;
  min-height: 24px !important;
  position: absolute !important;
  right: 0.5rem !important;
  top: 50% !important;
  transform: translateY(-50%) !important;
}

.p-dropdown-clear-icon:hover {
  color: var(--error-color) !important;
  background-color: var(--surface-color-hover) !important;
  transform: scale(1.1) !important;
}

.p-dropdown-clear-icon:active {
  transform: scale(0.95) !important;
}

/* Filter container styles */
.p-dropdown-filter-container {
  background-color: white !important;
  border-bottom: 1px solid var(--border-color) !important;
  padding: 0.75rem !important;
  position: relative !important;
}

/* Remove the pseudo-elements for search icon and label */
.p-dropdown-filter-container::before,
.p-dropdown-filter-container::after {
  display: none !important;
}

/* Additional styles for p-select dropdown items */
.p-select-panel .p-select-item {
  background-color: white !important;
  color: var(--text-color) !important;
}

.p-select-panel .p-select-item:hover {
  background-color: var(--surface-color-hover) !important;
}

.p-select-panel .p-select-item.p-highlight {
  background-color: var(--primary-color-lighter) !important;
  color: var(--text-color) !important;
}

/* Ensure dropdown panel has solid background */
.p-select-panel {
  background-color: white !important;
  border: 1px solid var(--border-color) !important;
  box-shadow: var(--box-shadow) !important;
}

/* Fix for any nested elements inside select items */
.p-select-item * {
  background-color: transparent !important;
}

.p-select-item:hover * {
  background-color: transparent !important;
}

.p-select-item.p-highlight * {
  background-color: transparent !important;
}

/* Specific styles for service option elements in booking popup */
.service-option {
  background-color: white !important;
  color: var(--text-color) !important;
  border-bottom: 1px solid var(--border-color-light) !important;
  transition: background-color 0.2s ease !important;
  padding: 0.5rem 1rem !important;
}

.service-option:hover {
  background-color: var(--surface-color-hover) !important;
}

.service-option:last-child {
  border-bottom: none !important;
}

.service-option.selected {
  padding: 0.4rem 1rem !important;
}

.service-option .service-info {
  background-color: transparent !important;
}

.service-option .service-icon {
  background-color: transparent !important;
}

.service-option .service-name {
  background-color: transparent !important;
  color: var(--text-color) !important;
}

.service-option .service-description {
  background-color: transparent !important;
  color: var(--text-color-light) !important;
}

.service-option .service-price {
  background-color: transparent !important;
  color: var(--primary-color) !important;
}

.service-option .service-meta {
  background-color: transparent !important;
}

.service-option .service-duration {
  background-color: transparent !important;
  color: var(--text-color-light) !important;
}

.service-option .service-popular {
  background-color: #fff3cd !important;
  color: var(--success-color) !important;
}

.service-option .service-details {
  background-color: transparent !important;
}

/* Ensure selected item has proper styling */
.service-option.selected {
  background-color: white !important;
}

.service-option.selected * {
  background-color: transparent !important;
}

/* PrimeNG CSS Variables for consistent theming */
:root {
  /* Nova gama crom√†tica - Tons de blau */
  --primary-color-darkest: #0F2C59;
  --primary-color-dark: #1F4B91;
  --primary-color: #306DCD;
  --primary-color-light: #6392F1;
  --primary-color-lighter: #A3B9F7;

  /* Colors secundaris */
  --secondary-color: #DAE2FB;
  --secondary-color-light: #F8FAFF;

  /* Colors de text */
  --text-color: #0F2C59;
  --text-color-light: #616161;
  --text-color-white: #FFFFFF;

  /* Colors de fons */
  --background-color: #F8FAFF;
  --surface-color: #FFFFFF;
  --surface-color-hover: #F0F4FF;

  /* Colors de bordes */
  --border-color: #DAE2FB;
  --border-color-light: #E0E0E0;

  /* Colors d'estat */
  --success-color: #28a745;
  --warning-color: #ffc107;
  --error-color: #dc3545;
  --info-color: #17a2b8;

  /* Ombre */
  --box-shadow: 0 4px 12px rgba(15, 44, 89, 0.1);
  --box-shadow-hover: 0 6px 16px rgba(15, 44, 89, 0.15);
}

/* Global styles */
body {
  margin: 0;
  padding: 0;
  font-family: -apple-system, BlinkMacSystemFont, "Segoe UI", Roboto, Helvetica, Arial, sans-serif, "Apple Color Emoji", "Segoe UI Emoji", "Segoe UI Symbol";
  background-color: var(--background-color);
  color: var(--text-color);
  line-height: 1.6;
}

/* Custom styles for the application */
:host {
  display: block;
}

/* Estils per botons globals */
.btn {
  padding: 0.75rem 1.5rem;
  border-radius: 8px;
  font-weight: 500;
  cursor: pointer;
  text-decoration: none;
  display: inline-block;
  text-align: center;
  border: 1px solid transparent;
}

.btn-primary {
  background-color: var(--primary-color);
  color: var(--text-color-white);
  border-color: var(--primary-color);
}

.btn-primary:hover {
  background-color: var(--primary-color-dark);
  border-color: var(--primary-color-dark);
}

.btn-secondary {
  background-color: var(--secondary-color);
  color: var(--primary-color-dark);
  border-color: var(--secondary-color);
}

.btn-secondary:hover {
  background-color: #c4d3fa;
  border-color: #c4d3fa;
}

.btn-outline {
  background-color: transparent;
  color: var(--primary-color);
  border: 1px solid var(--primary-color);
}

.btn-outline:hover {
  background-color: var(--primary-color);
  color: var(--text-color-white);
}

/* Estils per targetes */
.card {
  background-color: #fff;
  color: #222;
  border-radius: 12px;
  box-shadow: var(--box-shadow);
  padding: 1.5rem;
  margin-bottom: 1rem;
}

.card:hover {
  box-shadow: var(--box-shadow-hover);
}

/* Estils per inputs */
.input {
  width: 100%;
  padding: 0.75rem;
  border: 1px solid var(--border-color);
  border-radius: 8px;
  font-size: 1rem;
  background-color: #fff;
  color: #222;
}

.input:focus {
  outline: none;
  border-color: var(--primary-color);
  box-shadow: 0 0 0 3px rgba(48, 109, 205, 0.15);
}

/* Estils per enlla√ßos */
a {
  color: var(--primary-color);
  text-decoration: none;
}

a:hover {
  color: var(--primary-color-dark);
}

/* Estils per t√≠tols */
h1, h2, h3, h4, h5, h6 {
  color: var(--text-color);
  margin-bottom: 1rem;
  font-weight: 600;
}

h1 { font-size: 2.25rem; }
h2 { font-size: 1.75rem; }
h3 { font-size: 1.25rem; }

/* Estils per containers */
.container {
  margin: 0 auto;
  padding: 0 1rem;
}

/* Estils per seccions */
.section {
  padding: 3rem 0;
}

/* Estils per grid */
.grid {
  display: grid;
  gap: 1.5rem;
}

.grid-2 {
  grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
}

.grid-3 {
  grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
}

/* Estils per flexbox */
.flex {
  display: flex;
}

.flex-center {
  justify-content: center;
  align-items: center;
}

.flex-between {
  justify-content: space-between;
  align-items: center;
}

/* RTL Support Styles */
[dir="rtl"] {
  /* Text alignment */
  text-align: right;

  /* Margins and paddings */
  .btn, .card, .input {
    text-align: right;
  }

  /* Flexbox direction */
  .flex {
    flex-direction: row-reverse;
  }

  /* Grid direction */
  .grid {
    direction: rtl;
  }

  /* Icons and arrows */
  .arrow, .icon {
    transform: scaleX(-1);
  }

  /* Dropdowns and menus */
  .dropdown, .menu {
    right: auto;
    left: 0;
  }

  /* Form elements */
  input, textarea, select {
    text-align: right;
  }

  /* Lists */
  ul, ol {
    padding-right: 1.5rem;
    padding-left: 0;
  }

  /* Navigation */
  nav ul {
    flex-direction: row-reverse;
  }

  /* Buttons with icons */
  .btn .icon {
    margin-left: 0;
    margin-right: 0.5rem;
  }

  /* Cards and containers */
  .card, .container {
    direction: rtl;
  }
}

/* RTL specific overrides for PrimeNG components */
[dir="rtl"] {
  .p-dropdown, .p-multiselect, .p-calendar {
    text-align: right;
  }

  .p-dropdown-panel, .p-multiselect-panel {
    right: auto;
    left: 0;
  }

  .p-menu {
    direction: rtl;
  }

  .p-menuitem-icon {
    margin-left: 0.5rem;
    margin-right: 0;
  }
}

/* Estils per espaiat */
.mt-1 { margin-top: 0.5rem; }
.mt-2 { margin-top: 1rem; }
.mt-3 { margin-top: 1.5rem; }
.mt-4 { margin-top: 2rem; }

.mb-1 { margin-bottom: 0.5rem; }
.mb-2 { margin-bottom: 1rem; }
.mb-3 { margin-bottom: 1.5rem; }
.mb-4 { margin-bottom: 2rem; }

.p-1 { padding: 0.5rem; }
.p-2 { padding: 1rem; }
.p-3 { padding: 1.5rem; }
.p-4 { padding: 2rem; }

/* Prevenir interfer√®ncies amb el popup de Google */
.firebaseui-container {
  position: fixed !important;
  z-index: 9999 !important;
}

.firebaseui-card {
  position: relative !important;
  transform: none !important;
}

.firebaseui-card-content {
  position: relative !important;
  transform: none !important;
}

/* Prevenir que els estils de la p√†gina afectin el popup */
.firebaseui-container * {
  box-sizing: border-box !important;
}

/* Assegurar que el popup no es mogui */
.firebaseui-idp-button {
  position: relative !important;
  transform: none !important;
}

.firebaseui-idp-button:hover {
  transform: none !important;
}

/* Angular Calendar Styles */
@import '../node_modules/angular-calendar/css/angular-calendar.css';

/* PrimeNG Toast Custom Styles */
.p-toast {
  z-index: 9999 !important;
}

.p-toast .p-toast-message {
  margin: 0.5rem 0 !important;
  border-radius: 12px !important;
  box-shadow: var(--box-shadow-hover) !important;
  border: 1px solid var(--border-color) !important;
  background: var(--surface-color) !important;
  border-left: 4px solid !important;
  animation: toastSlideIn 0.3s ease-out !important;
  cursor: default !important;
  transition: all 0.2s ease !important;
  min-width: 350px !important;
  max-width: 450px !important;
  position: relative !important;
}

.p-toast .p-toast-message[data-clickable="true"] {
  cursor: pointer !important;
}

.p-toast .p-toast-message:hover {
  box-shadow: 0 12px 40px rgba(15, 44, 89, 0.2) !important;
  transform: translateY(-2px) !important;
  border-color: var(--primary-color) !important;
}

.p-toast .p-toast-message[data-clickable="true"]::after {
  content: 'üëÜ Clic per veure detalls' !important;
  position: absolute !important;
  bottom: 0.5rem !important;
  right: 1rem !important;
  font-size: 0.75rem !important;
  color: var(--primary-color) !important;
  opacity: 0 !important;
  transition: opacity 0.2s ease !important;
  font-weight: 500 !important;
}

.p-toast .p-toast-message[data-clickable="true"]:hover::after {
  opacity: 1 !important;
}

.p-toast .p-toast-message.p-toast-message-success {
  border-left-color: var(--success-color) !important;
  background: linear-gradient(135deg, rgba(40, 167, 69, 0.08) 0%, var(--surface-color) 100%) !important;
}

.p-toast .p-toast-message.p-toast-message-error {
  border-left-color: var(--error-color) !important;
  background: linear-gradient(135deg, rgba(220, 53, 69, 0.08) 0%, var(--surface-color) 100%) !important;
}

.p-toast .p-toast-message.p-toast-message-warn {
  border-left-color: var(--warning-color) !important;
  background: linear-gradient(135deg, rgba(255, 193, 7, 0.08) 0%, var(--surface-color) 100%) !important;
}

.p-toast .p-toast-message.p-toast-message-info {
  border-left-color: var(--info-color) !important;
  background: linear-gradient(135deg, rgba(23, 162, 184, 0.08) 0%, var(--surface-color) 100%) !important;
}

.p-toast .p-toast-message-icon {
  font-size: 1.25rem !important;
  margin-right: 0.75rem !important;
  display: flex !important;
  align-items: center !important;
  justify-content: center !important;
  width: 24px !important;
  height: 24px !important;
  border-radius: 50% !important;
  flex-shrink: 0 !important;
}

.p-toast .p-toast-message.p-toast-message-success .p-toast-message-icon {
  color: var(--success-color) !important;
  background: rgba(40, 167, 69, 0.1) !important;
}

.p-toast .p-toast-message.p-toast-message-error .p-toast-message-icon {
  color: var(--error-color) !important;
  background: rgba(220, 53, 69, 0.1) !important;
}

.p-toast .p-toast-message.p-toast-message-warn .p-toast-message-icon {
  color: var(--warning-color) !important;
  background: rgba(255, 193, 7, 0.1) !important;
}

.p-toast .p-toast-message.p-toast-message-info .p-toast-message-icon {
  color: var(--info-color) !important;
  background: rgba(23, 162, 184, 0.1) !important;
}

.p-toast .p-toast-message-content {
  padding: 1.25rem 1.5rem !important;
  display: flex !important;
  align-items: flex-start !important;
  gap: 0.75rem !important;
  padding-bottom: 1rem !important;
}

.p-toast .p-toast-message-actions {
  display: flex !important;
  gap: 0.5rem !important;
  margin-top: 0.75rem !important;
  justify-content: flex-end !important;
}

.p-toast .p-toast-message-btn {
  padding: 0.5rem 1rem !important;
  border-radius: 6px !important;
  font-weight: 500 !important;
  font-size: 0.875rem !important;
  cursor: pointer !important;
  border: 1px solid transparent !important;
  transition: all 0.2s ease !important;
  text-decoration: none !important;
  display: inline-flex !important;
  align-items: center !important;
