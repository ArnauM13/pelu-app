}

.p-toast .p-toast-message-btn-primary:hover {
  background: var(--primary-color-dark) !important;
  border-color: var(--primary-color-dark) !important;
  transform: translateY(-1px) !important;
}

.p-toast .p-toast-message-btn-secondary {
  background: var(--secondary-color) !important;
  color: var(--primary-color-dark) !important;
  border-color: var(--secondary-color) !important;
}

.p-toast .p-toast-message-btn-secondary:hover {
  background: #c4d3fa !important;
  border-color: #c4d3fa !important;
  transform: translateY(-1px) !important;
}

.p-toast .p-toast-message-text {
  flex: 1 !important;
  color: var(--text-color) !important;
  font-weight: 500 !important;
  line-height: 1.5 !important;
  margin: 0 !important;
}

.p-toast .p-toast-summary {
  font-weight: 700 !important;
  font-size: 1rem !important;
  color: var(--text-color) !important;
  margin-bottom: 0.5rem !important;
  display: block !important;
  letter-spacing: -0.01em !important;
}

.p-toast .p-toast-detail {
  font-size: 0.95rem !important;
  color: var(--text-color) !important;
  line-height: 1.5 !important;
  margin: 0 !important;
